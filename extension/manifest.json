{
  "manifest_version": 3,
  "name": "Tabi",
  "version": "1.2",
  "description": "AI-powered Chrome extension that works for you.",
  "permissions": [
    "tabs",
    "tabGroups",
    "windows",
    "scripting"
  ],

  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": { "service_worker": "background.js" },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "TidyTabs AI"
  },
  "web_accessible_resources": [{
    "resources": [
      "popup.html",
      "popup.js",
      "config.js",
      "style.css"
    ],
    "matches": ["<all_urls>"]
  }],
  "commands": {
    "open-command-bar": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+K"
      },
      "description": "Open TidyTabs Command Bar"
    }
  }

  
}